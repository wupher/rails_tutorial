<h2>Sign In</h2>
<% form_for(:session, :url => sessions_path) do |f| -%>
<%= f.error_messages %>
<div class='field'>
	<%= f.label :email %><br/>
	<%= f.text_field :email %>
</div>  
<div class='field'>
	<%= f.label :password %><br/>
	<%= f.password_field :password %>
</div>
<div class='action'>
	<%= f.submit 'Sign In' %>
</div>
<% end -%>

<p>New user? <%= link_to "Sign Up Now!", signup_path %></p>
